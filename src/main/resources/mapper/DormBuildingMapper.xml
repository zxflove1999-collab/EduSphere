<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.campus.mapper.DormBuildingMapper">

    <resultMap id="BaseResultMap" type="com.example.campus.entity.DormBuilding">
        <id column="building_id" property="buildingId"/>
        <result column="building_name" property="buildingName"/>
        <result column="gender_limit" property="genderLimit"/>
        <result column="manager_id" property="managerId"/>
        <result column="is_active" property="isActive"/>
    </resultMap>

    <select id="selectById" resultMap="BaseResultMap">
        SELECT * FROM t_dorm_building WHERE building_id = #{buildingId}
    </select>

    <select id="selectByCondition" resultMap="BaseResultMap">
        SELECT * FROM t_dorm_building
        <where>
            <if test="buildingName != null and buildingName != ''">
                AND building_name LIKE CONCAT('%', #{buildingName}, '%')
            </if>
            <if test="isActive != null">
                AND is_active = #{isActive}
            </if>
        </where>
        ORDER BY building_id
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="buildingId">
        INSERT INTO t_dorm_building (building_name, gender_limit, manager_id, is_active)
        VALUES (#{buildingName}, #{genderLimit}, #{managerId}, #{isActive})
    </insert>

    <update id="update">
        UPDATE t_dorm_building
        <set>
            <if test="buildingName != null">building_name = #{buildingName},</if>
            <if test="genderLimit != null">gender_limit = #{genderLimit},</if>
            <if test="managerId != null">manager_id = #{managerId},</if>
            <if test="isActive != null">is_active = #{isActive},</if>
        </set>
        WHERE building_id = #{buildingId}
    </update>

    <delete id="deleteById">
        DELETE FROM t_dorm_building WHERE building_id = #{buildingId}
    </delete>

</mapper>

