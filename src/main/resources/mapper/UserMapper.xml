<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.campus.mapper.UserMapper">

    <resultMap id="BaseResultMap" type="com.example.campus.entity.User">
        <id column="user_id" property="userId"/>
        <result column="username" property="username"/>
        <result column="password_hash" property="passwordHash"/>
        <result column="full_name" property="fullName"/>
        <result column="email" property="email"/>
        <result column="phone_number" property="phoneNumber"/>
        <result column="avatar_url" property="avatarUrl"/>
        <result column="status" property="status"/>
        <result column="token_version" property="tokenVersion"/>
        <result column="last_login_at" property="lastLoginAt"/>
        <result column="created_at" property="createdAt"/>
        <result column="updated_at" property="updatedAt"/>
    </resultMap>

    <select id="selectByUsername" resultMap="BaseResultMap">
        SELECT * FROM t_user WHERE username = #{username}
    </select>

    <select id="selectById" resultMap="BaseResultMap">
        SELECT * FROM t_user WHERE user_id = #{userId}
    </select>

    <select id="selectByIds" resultMap="BaseResultMap">
        SELECT * FROM t_user WHERE user_id IN
        <foreach collection="userIds" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="userId">
        INSERT INTO t_user (username, password_hash, full_name, email, phone_number, avatar_url, status, token_version)
        VALUES (#{username}, #{passwordHash}, #{fullName}, #{email}, #{phoneNumber}, #{avatarUrl}, #{status}, #{tokenVersion})
    </insert>

    <update id="update">
        UPDATE t_user
        <set>
            <if test="fullName != null">full_name = #{fullName},</if>
            <if test="email != null">email = #{email},</if>
            <if test="phoneNumber != null">phone_number = #{phoneNumber},</if>
            <if test="avatarUrl != null">avatar_url = #{avatarUrl},</if>
            <if test="status != null">status = #{status},</if>
        </set>
        WHERE user_id = #{userId}
    </update>

    <update id="updatePassword">
        UPDATE t_user SET password_hash = #{passwordHash}, token_version = token_version + 1
        WHERE user_id = #{userId}
    </update>

    <update id="updateTokenVersion">
        UPDATE t_user SET token_version = token_version + 1 WHERE user_id = #{userId}
    </update>

    <delete id="deleteById">
        DELETE FROM t_user WHERE user_id = #{userId}
    </delete>

</mapper>

